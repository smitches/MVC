@using Team_5_Project.Controllers
@model Team_5_Project.Models.ReportsViewModel
@{
    ViewBag.Title = "SeatReport";
}

<h2>Seat Report</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        @*Prompt Filters*@

        <div class="form-group">
            @Html.LabelFor(model => model.DateRangeStart, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateRangeStart, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.DateRangeStart, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DateRangeEnd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateRangeEnd, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.DateRangeEnd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div>
                Departure City
            </div>
            <div class="col-md-10">
                @Html.ListBox("SelectedCityIDs", (MultiSelectList)ViewBag.AllCities, new { @class = "form-control" })
            </div>
        </div>

        <p>Filter By Route</p>
        @Html.ListBox("SelectedRouteID", (MultiSelectList)ViewBag.AllRoutes, new { @class = "form-control" })

        <p>Filter By Ticket Type</p>
        @Html.ListBox("SelectedSeatTypeID", (MultiSelectList)ViewBag.AllSeatTypes, new { @class = "form-control" })




        <br /><br />


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
        </div>
}

