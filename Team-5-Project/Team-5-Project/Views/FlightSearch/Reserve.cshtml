
@{
    ViewBag.Title = "Reserve";
}

<h2>Reserve A Seat</h2>
<h3>Seat Layout</h3>

<link href="~/Content/squarestyle.css" rel="stylesheet" type="image/svg" />
<html>
<body>
    <img src="~/Content/seatsphotopenguinairlines.jpg" width="661" height="635" alt="" />
</body>
