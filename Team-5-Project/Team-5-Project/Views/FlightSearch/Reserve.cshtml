@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    
    <div class="form-group">
        <label class="control-label col-md-2">Seats</label>
        <div class="col-md-10">
            @Html.ListBox("SeatIDs", (MultiSelectList)ViewBag.SeatsChosen, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>

    

        

}