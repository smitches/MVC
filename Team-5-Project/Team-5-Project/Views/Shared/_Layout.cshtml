<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - I HATE PENGUIN AIRLINES</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>



                    @if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("Manager"))
                        {
                            <li>@Html.ActionLink("Role Admin", "Index", "RoleAdmin", new { area = "" }, new { @class = "navbar-brand" })</li>
                            <li>@Html.ActionLink("Cities", "Index", "Cities", new { area = "" }, new { @class = "navbar-brand" })</li>
							<li>@Html.ActionLink("Flights", "Index", "Flights", new { area = "" }, new { @class = "navbar-brand" })</li>
							<li>@Html.ActionLink("Reservation", "Index", "Flights", new { area = "" }, new { @class = "navbar-brand" })</li>
							<li>@Html.ActionLink("Reports", "Index", "Reports", new { area = "" }, new { @class = "navbar-brand" })</li>
							<li>@Html.ActionLink("Employee", "Index", "Employees", new { area = "" }, new { @class = "navbar-brand" })</li>
							<li>@Html.ActionLink("Customers", "Index", "Customers", new { area = "" }, new { @class = "navbar-brand" })</li>
						}


						if (User.IsInRole("Agent"))
						{
							<li>@Html.ActionLink("Flights", "Index", "Flights", new { area = "" }, new { @class = "navbar-brand" })</li>
							<li>@Html.ActionLink("Reservation", "Index", "Flights", new { area = "" }, new { @class = "navbar-brand" })</li>
						}

						if (User.IsInRole("Customer"))
						{
							<li>@Html.ActionLink("Flights", "Index", "Flights", new { area = "" }, new { @class = "navbar-brand" })</li>
							<li>@Html.ActionLink("Reservation", "Index", "Reservations", new { area = "" }, new { @class = "navbar-brand" })</li>
						}

					}

                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Team 5 - Grapefruit Group </p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>